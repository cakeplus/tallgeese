  Path: src
  BuildTools:ocamlbuild
  install: true
  MainIs: main.ml
  CCOpt: -g  -Wextra -Wall -ObjC
  CompiledObject: native
  BuildDepends: cmdliner, podge, ssh
  NativeOpt: -ccopt -framework -ccopt Appkit 
  CSources: code.c

